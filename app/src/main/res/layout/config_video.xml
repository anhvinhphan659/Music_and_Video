<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtConfigVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Video Config" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:paddingStart="20dp"
            android:paddingTop="40dp"
            android:text="Tốc độ phát"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/spinnerSpeed"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSoundQuality"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:paddingStart="20dp"
            android:paddingTop="40dp"
            android:text="Chất lượng âm thanh"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/spinnerSoundQuality"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStep"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:paddingStart="20dp"
            android:paddingTop="40dp"
            android:text="Bước nhảy"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/spinnerStep"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerAuto"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="40dp" />
    </LinearLayout>
</LinearLayout>